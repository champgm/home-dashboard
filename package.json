{
  "name": "home-dashboard",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng build --help",
    "serve": "ng serve",
    "start": "node --harmony src/backend/index.js | bunyan",
    "start.image": "docker run -itd -p $HUE_WEB_PORT:8888 -p $EXTERNAL_WEB_PORT:8889 -e HUE_BRIDGE_IP=$HUE_BRIDGE_IP -e HUE_BRIDGE_PORT=$HUE_BRIDGE_PORT -e HUE_BRIDGE_TOKEN=$HUE_BRIDGE_TOKEN -e TP_LINK_PLUGS=$TP_LINK_PLUGS -e SECRET_EXTERNAL=$SECRET_EXTERNAL -e SECRET_WHITE_ID=$SECRET_WHITE_ID -e SECRET_RED_ID=$SECRET_RED_ID -e SECRET_OFF=$SECRET_OFF -e SSL_CERT_PATH=$SSL_CERT_PATH -e SSL_KEY_PATH=$SSL_KEY_PATH -v $SSL_HOST_FOLDER:/etc/ssl-cert home-dashboard",
    "start.watch": "nodemon --exec node --harmony src/backend/index.js | bunyan",
    "build.image": "docker build -t home-dashbaord .",
    "build": "node --max_old_space_size=12288 node_modules/@angular/cli/bin/ng build --aot true --environment prod",
    "build.watch": "node --max_old_space_size=12288 node_modules/@angular/cli/bin/ng build --aot --prod --watch",
    "test": "ng test",
    "eslint": "eslint backend --ext .js --fix",
    "lint": "ng lint --fix && npm run eslint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "alexa-verifier-middleware": "^0.2.2",
    "bunyan": "^1.8.10",
    "core-js": "^2.4.1",
    "hs100-api": "^0.4.0",
    "morgan": "^1.8.2",
    "ng2-bootstrap": "^1.6.3",
    "request-promise": "^4.2.1",
    "rxjs": "^5.4.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.2.5",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.0.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  }
}