{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-config-standard"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": [
      true,
      {
        "esSpecCompliant": true
      }
    ],
    "max-line-length": [
      true,
      120
    ],
    "await-promise": [
      false
    ],
    "no-floating-promises": false
  }
}